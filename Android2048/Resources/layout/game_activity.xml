<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fcf0b1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Hello user"
        android:textSize="50sp"
        android:id="@+id/txtHelloMsg"
        android:textColor="#000"
        android:fontFamily="cursive"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Score: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/txtScore"/>
        <View
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best score: "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/txtBestScore"/>
        <View
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highest tile: "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/ivHighestTile"
            android:tag="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="#ada397"
        android:layout_gravity="center"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                 android:layout_width="90dp"
                 android:layout_height="90dp"
                android:id="@+id/ivTile0"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
            <ImageView
                 android:layout_width="90dp"
                 android:layout_height="90dp"
                android:id="@+id/ivTile1"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
            <ImageView
                 android:layout_width="90dp"
                 android:layout_height="90dp"
                android:id="@+id/ivTile2"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
            <ImageView
                 android:layout_width="90dp"
                 android:layout_height="90dp"
                android:id="@+id/ivTile3"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                 android:layout_width="90dp"
                 android:layout_height="90dp"
                android:id="@+id/ivTile4"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/ivTile5"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/ivTile6"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/ivTile7"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                 android:layout_width="90dp"
                 android:layout_height="90dp"
                android:id="@+id/ivTile8"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
            <ImageView
                 android:layout_width="90dp"
                 android:layout_height="90dp"
                android:id="@+id/ivTile9"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
            <ImageView
                 android:layout_width="90dp"
                 android:layout_height="90dp"
                android:id="@+id/ivTile10"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
            <ImageView
                 android:layout_width="90dp"
                 android:layout_height="90dp"
                android:id="@+id/ivTile11"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                 android:layout_width="90dp"
                 android:layout_height="90dp"
                android:id="@+id/ivTile12"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
            <ImageView
                 android:layout_width="90dp"
                 android:layout_height="90dp"
                android:id="@+id/ivTile13"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
            <ImageView
                 android:layout_width="90dp"
                 android:layout_height="90dp"
                android:id="@+id/ivTile14"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
            <ImageView
                 android:layout_width="90dp"
                 android:layout_height="90dp"
                android:id="@+id/ivTile15"
                android:layout_margin="5dp"
                android:background="#0000"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:id="@+id/btnRestart" 
            android:text="Restart game" 
            android:textSize="15dp" 
            android:backgroundTint="#fad693"
            android:textColor="#000"
            android:layout_gravity="center" 
            android:textStyle="bold"/>
        <Button 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:id="@+id/btnLogout" 
            android:text="Logout" 
            android:textSize="15dp" 
            android:backgroundTint="#fad693"
            android:textColor="#000"
            android:layout_gravity="center" 
            android:textStyle="bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtWinOrLose"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="#c40202"
        android:textStyle="bold"/>
</LinearLayout>